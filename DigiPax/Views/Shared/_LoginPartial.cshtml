@using Microsoft.AspNetCore.Identity;
@using DigiPax.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item fa-1x mr-5 pr-5">
            <strong><a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user text-success pr-3" aria-hidden="true"></i>@User.Identity.Name</a></strong>
        </li>
        <li class="nav-item fa-1x">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark fa-1x">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>