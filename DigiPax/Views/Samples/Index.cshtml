@model IEnumerable<DigiPax.Models.Sample>

@{
    ViewData["Title"] = "Sample Pool";
}

<h1>Sample Pool</h1>

<p>
    <a asp-action="Create">Add a Sample</a>
</p>
<form asp-controller="Samples" asp-action="SearchSamples">
    <p>
        Search Samples: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>

        <tr>
            <th>
                @Html.ActionLink("Sample Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Author", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Genre", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Key", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SampleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SampleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MusicKey.Name)
                </td>
                <td>
                    <audio controls>
                        <source src="~/AudioFiles/clinky tinky.mp3" type="audio/mpeg">

                    </audio>
                    <a asp-action="Create" asp-route-id="@item.Id">Favorite</a>
                </td>
            </tr>
        }

    </tbody>
</table>

