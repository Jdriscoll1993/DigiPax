@model IEnumerable<DigiPax.Models.Sample>

@{
    ViewData["Title"] = "Sample Pool";
}

<h1>Sample Pool</h1>

<p>
    <a asp-action="Create">Add a Sample</a>
</p>

<table class="table">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SampleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SampleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SampleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.Name)
                </td>
                <td>
                    <audio controls>
                        <source src="~/AudioFiles/clinky tinky.mp3" type="audio/mpeg">

                    </audio>
                    <a asp-action="Create" asp-route-id="@item.Id">Favorite</a>
                </td>
            </tr>
        }
    </tbody>
</table>

